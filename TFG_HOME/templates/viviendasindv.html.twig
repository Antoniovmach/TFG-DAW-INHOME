    <section class="section section-lg">
      <div class="container">
        <div class="row row-50">
          <div class="col-lg-8">
            <article class="post-creative">
              <h3 class="post-creative-title text-none-transform">{{ vivienda.titulo }}</h3>
              <h4>{{ vivienda.descripcion }}</h4>

              <!-- Swiper Slider Section -->
              <section
                class="swiper-container swiper-slider swiper-slider-tiny text-center centered-pagination swiper-container-fade swiper-container-horizontal swiper-container-wp8-horizontal"
                data-loop="true" data-slide-effect="fade" data-autoplay="false" data-simulate-touch="true">
                <div class="swiper-wrapper primary-overlay">
                  {% for foto in vivienda.viviendaFotos %}
                  <div class="swiper-slide"
                    style="background-image: url('{{ asset('/uploads/images/' ~ foto.fotoUrl) }}'); background-size: cover; background-position: center;">
                  </div>
                  {% endfor %}
                </div>
                <div class="swiper-pagination-outer container">
                  <div
                    class="swiper-pagination swiper-pagination-modern swiper-pagination-marked swiper-pagination-clickable swiper-pagination-bullets"
                    data-index-bullet="true">
                    {% for i in 1..vivienda.viviendaFotos|length %}
                    <span class="swiper-pagination-bullet">{{ i|format('%02d') }}</span>
                    {% endfor %}
                    <span class="swiper-pagination-mark"></span>
                  </div>
                </div>
              </section>

              <!-- Quote Light-->
              <blockquote class="quote-light">




                <!-- Incluye el CSS de Bootstrap, Font Awesome y FullCalendar -->
